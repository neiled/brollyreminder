<body>
    <div id="container">
      <div id="header">
        <%= render :partial => 'shared/header' %>
        <%= render :partial=> 'shared/flashes' %>
        <%= yield :heading %>
      </div>	<!-- end of heading -->
      <div id="main">
        <div id="main_content">
          <%= yield %>
        </div>
       <div id="footer">
      </div> 
     </div> <!-- end of main -->
    </div> <!-- end of container -->
  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
